{
    "title": "Global default rules",
    "rules": [




        {
            "description": "Global default: switch workspace with command + shift + h/l (place first)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "required": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "required": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ]
                }
            ]
        },



        {
            "description": "Global default: left_command + [ as escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "open_bracket",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Global default: capslock + [ as escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "open_bracket",
                        "modifiers": {
                            "mandatory": [
                                "capslock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },





        {
            "description": "Global default: capslock as command (place last)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ]
                }
            ]
        }



    ]
}
