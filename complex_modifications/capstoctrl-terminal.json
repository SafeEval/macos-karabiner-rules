{
    "title": "Capslock Key as Control in Terminal Applications",
    "rules": [
        {
            "description": "Use capslock as control in terminal applications",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$",
                                "^com\\.googlecode\\.iterm2$",
                                "^co\\.zeit\\.hyperterm$",
                                "^co\\.zeit\\.hyper$",
                                "^io\\.alacritty$",
                                "^net\\.kovidgoyal\\.kitty$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
